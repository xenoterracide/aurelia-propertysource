  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "This Test",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ava"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "port": 9229,
      "skipFiles": ["<node_internals>/**", "**/*.json"],
      "args": [
        "debug",
        "--break",
        "--serial",
        "--color",
        "--require",
        "source-map-support/register",
        "--require",
        "ts-node/register",
        "--require",
        "esm",
        "${relativeFile}"
      ]
    }
  ]
}
